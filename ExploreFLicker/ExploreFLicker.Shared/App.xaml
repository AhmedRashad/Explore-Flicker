<Application
    x:Class="ExploreFlicker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExploreFlicker"
    xmlns:viewmodels="using:ExploreFlicker.Viewmodels"
    xmlns:converters="using:ExploreFlicker.Converters">
    <Application.Resources>
        <viewmodels:ViewModelLocator x:Key="Locator"/>
        <converters:ItemClickedConverter x:Key="ItemClickedConverter"/>
        <converters:VisibleWhenTrueConverter x:Key="VisibleWhenTrueConverter" />

        <!--Square Image Thumbnail Template-->
        <DataTemplate x:Key="ThumbnailTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0"  Source="{Binding ThumbnailPath}"/>
                <TextBlock Grid.Row="1" Text="{Binding Title}" 
                                   MaxLines="1" TextWrapping="NoWrap"
                                   Margin="8" TextAlignment="Center" 
                                   VerticalAlignment="Bottom"
                                   FontSize="{StaticResource TextStyleMediumFontSize}"/>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
